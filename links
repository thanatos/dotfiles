# vim: filetype=yaml

".vimrc":
    !symlink
    path: '.vimrc'
    destination: vimrc

".bashrc":
    !shell-insertion
    file: '.bashrc'
    file-to-source: bashrc

".zshrc":
    !shell-insertion
    file: '.zshrc'
    file-to-source: zshrc

".gitconfig":
    !symlink
    path: '.gitconfig'
    destination: gitconfig

".gitexclude":
    !symlink
    path: '.gitexclude'
    destination: gitexclude
